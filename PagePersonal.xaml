        <TextBox x:Name="textBoxNumero"  HorizontalAlignment="Left" Margin="160,276,0,0" VerticalAlignment="Top" BorderThickness="1,1,1,1" Background="#66C6D7DC" TabIndex="11" MaxLength="5"/>
        <TextBox x:Name="textBoxPiso"  HorizontalAlignment="Left" Margin="287,276,0,0" VerticalAlignment="Top" BorderThickness="1,1,1,1" Background="#66C6D7DC" TabIndex="12" MaxLength="4"/>
        <ComboBox x:Name="comboBoxCiudad"  Margin="160,306,0,0" Width="480" BorderThickness="1,1,1,1" Background="#66C6D7DC"  IsEditable="True" TabIndex="15"/>
        <TextBlock x:Name="labelCiudad"  HorizontalAlignment="Left" Margin="15,306,0,0" Text="Ciudad" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.52,2.053" Height="32" Width="140" HorizontalTextAlignment="Right"/>
        <TextBlock x:Name="labelEstado"  HorizontalAlignment="Left" Margin="15,370,0,0" Text="Estado/Region" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.52,2.053" Height="32" Width="140" HorizontalTextAlignment="Right"/>
        <TextBlock x:Name="labelPais"  HorizontalAlignment="Left" Margin="15,402,0,0" Text="Pais" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.52,2.053" Height="32" Width="140" HorizontalTextAlignment="Right"/>
        <TextBox x:Name="textBoxDepartamento"  HorizontalAlignment="Left" Margin="422,276,0,0" VerticalAlignment="Top" BorderThickness="1,1,1,1" Background="#66C6D7DC" MaxLength="5" TabIndex="13"/>
        <ComboBox x:Name="comboBoxComuna"  Margin="160,338,0,0" Width="480" BorderThickness="1,1,1,1" Background="#66C6D7DC" IsEditable="True" TabIndex="16"/>
        <ComboBox x:Name="comboBoxRegion"  Margin="160,370,0,0" Width="480" BorderThickness="1,1,1,1" Background="#66C6D7DC" IsEditable="True" TabIndex="17"/>
        <ComboBox x:Name="comboBoxPais"  Margin="160,402,0,0" Width="480" BorderThickness="1,1,1,1" Background="#66C6D7DC" IsEditable="True" TabIndex="18"/>
        <TextBox x:Name="textBoxTelefono1"  HorizontalAlignment="Left" Margin="160,116,0,0" Text="" TextWrapping="NoWrap" VerticalAlignment="Top" RenderTransformOrigin="1.824,0.625" Width="240" BorderThickness="1,1,1,1" Background="#66C6D7DC" TabIndex="5" MaxLength="14"/>
        <TextBox x:Name="textBoxNombres"  HorizontalAlignment="Left" Margin="160,84,0,0" Text="" TextWrapping="NoWrap" VerticalAlignment="Top" RenderTransformOrigin="1.824,0.625" Width="480" BorderThickness="1,1,1,1" Background="#66C6D7DC" TabIndex="4" MaxLength="55"/>
        <Image x:Name="imageFotoPersonal" HorizontalAlignment="Left" Height="256" Margin="665,20,0,0" VerticalAlignment="Top" Width="297" Stretch="Fill" RequestedTheme="Default" IsTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" AllowFocusOnInteraction="False">
            <Image.FocusVisualSecondaryBrush>
                <SolidColorBrush/>
            </Image.FocusVisualSecondaryBrush>
        </Image>
        <Button x:Name="btnCargarFoto"  Content="Cargar Foto" Height="32" Margin="505,20,0,0" VerticalAlignment="Top" Width="135" Click="BtnPersonalCargarFoto"/>
        <TextBox x:Name="textBoxObservaciones"  HorizontalAlignment="Left" Margin="160,434,0,0" VerticalAlignment="Top" Width="480" BorderThickness="1,1,1,1" Background="#66C6D7DC" Height="145" TabIndex="19" AcceptsReturn="True" MaxLength="250"/>
        <TextBlock x:Name="labelZP"  HorizontalAlignment="Left" Margin="500,276,0,0" Text="ZP" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.52,2.053" Height="32" Width="54"/>
        <TextBox x:Name="textBoxCodigoPostal"  HorizontalAlignment="Left" Margin="555,276,0,0" VerticalAlignment="Top" BorderThickness="1,1,1,1" Background="#66C6D7DC" Width="85" TabIndex="14" MaxLength="12"/>
        <TextBox x:Name="textBoxTelefono2"  HorizontalAlignment="Left" Margin="410,116,0,0" Text="" TextWrapping="NoWrap" VerticalAlignment="Top" RenderTransformOrigin="1.824,0.625" Width="230" BorderThickness="1,1,1,1" Background="#66C6D7DC" TabIndex="6" MaxLength="14"/>
        <TextBlock x:Name="labelAutorizacion"  HorizontalAlignment="Left" Margin="15,180,0,0" Text="Autorización" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="140" HorizontalTextAlignment="Right"/>
        <TextBlock x:Name="labelCargo"  HorizontalAlignment="Left" Margin="15,212,0,0" Text="Cargo" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="140" HorizontalTextAlignment="Right"/>
        <TextBox x:Name="textBoxCargo"  HorizontalAlignment="Left" Margin="160,212,0,0" VerticalAlignment="Top" Width="480" BorderThickness="1,1,1,1" Background="#66C6D7DC" TabIndex="9" MaxLength="55"/>
        <ComboBox x:Name="comboBoxAutorizacion"  Margin="160,180,0,0" Width="480" BorderThickness="1,1,1,1" Background="#66C6D7DC"  IsEditable="True" TabIndex="8"/>
    </Grid>
</Page>
