            <AppBarButton x:Name="appBarListar" Icon="Document" Label="Listar" Click="BtnListarRecursos"/>
            <AppBarButton x:Name="appBarSalir" Icon="Go" Label="Salir" Click="BtnSalirRecursos"/>
