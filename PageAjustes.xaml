<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BikeMessenger"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Custom="using:Microsoft.Toolkit.Uwp.UI.Controls" xmlns:Custom1="using:Windows.UI.Xaml.Controls.Maps" x:Name="PantallaAjustes"
    x:Class="BikeMessenger.PageAjustes"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar x:Name="CommandBarBottomAjustes" DefaultLabelPosition="Right"  Background="#FFC5CCCF" HorizontalAlignment="Center">
            <CommandBar.Content>
                <TextBlock Text="Ajustes" Margin="12,8"/>
            </CommandBar.Content>
            <AppBarButton x:Name="appBarAgregar" Icon="Add" Label="Agregar"/>
            <AppBarButton x:Name="appBarModificar" Icon="Edit" Label="Modificar"/>
            <AppBarButton x:Name="appBarBorrar" Icon="Delete" Label="Borrar"/>
            <AppBarButton x:Name="appBarImprimir" Icon="Print" Label="Imprimir"/>
            <AppBarButton x:Name="appBarSalir" Icon="Go" Label="Salir" Click="BtnSalirAjustes"/>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid x:Name="GridAjustes" Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
        <TextBlock x:Name="labelDirectorioActual" HorizontalAlignment="Left" Margin="25,187,0,0" Text="Directorio Actual de Base de Datos" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.92,-0.053" Height="32" Width="254" HorizontalTextAlignment="Right"/>
        <TextBox x:Name="textBoxDirectorioActual" HorizontalAlignment="Left" Margin="284,187,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="655" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" BorderThickness="1,1,1,1" IsReadOnly="True" Height="32"/>
        <Button x:Name="btnBuscarNuevoDirectorio" Content="Buscar Nuevo Directorio" Height="32" Margin="284,256,0,0" VerticalAlignment="Top" Width="250" Click="BtnEventoBuscarNuevoDirectorio" ClickMode="Press" BorderBrush="#FF1D0404"/>
        <TextBlock x:Name="labelDirectorioRespaldos" Margin="64,219,1001,0" Text="Directorio de Respaldos" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.92,-0.053" Height="32" HorizontalTextAlignment="Right" />
        <TextBox x:Name="textBoxDirectorioDeRespaldos" HorizontalAlignment="Left" Margin="284,219,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="655" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" BorderThickness="1,1,1,1"/>
        <Button x:Name="btnCopiarBaseDeDatos" Content="Respaldar Base de Datos" Height="32" Margin="649,256,0,0" VerticalAlignment="Top" Width="290" Click="BtnEventoCopiarBaseDeDatos" ClickMode="Press" BorderBrush="#FF1D0404"/>
        <TextBlock x:Name="labelDirectorioSqlite" HorizontalAlignment="Left" Margin="25,13,0,0" Text="Configuración de Bases de Datos y Almacenamientos  de Reportes y Archivos" TextWrapping="NoWrap" VerticalAlignment="Top" RenderTransformOrigin="0.92,-0.053" Height="32" Width="934" HorizontalTextAlignment="Center" FontWeight="Bold"/>
        <TextBlock x:Name="labelSincronizar" HorizontalAlignment="Left" Margin="38,0,0,0" Text="Sincronizar con Pentalpha Server" TextWrapping="Wrap" VerticalAlignment="Center" RenderTransformOrigin="0.92,-0.053" Height="23" Width="241" HorizontalTextAlignment="Right" />
        <CheckBox x:Name="checkBoxSincronizacionPentalpha" Content="Con esta opción podra recibir via red las solicitudes de servicios y encargos  de sus clientes mediante el software cliente y saber el estado de sus mensajeros a travez de la app Android BikeMessenger." Margin="284,340,0,0" VerticalAlignment="Top" Width="655" Click="CambiarModoSincronizacion"/>
        <ProgressRing x:Name="LvrProgresRing" HorizontalAlignment="Left" Margin="401,244,0,0" VerticalAlignment="Top" Height="169" Width="179" Visibility="Visible" HighContrastAdjustment="Auto">
            <ProgressRing.Foreground>
                <SolidColorBrush Color="{ThemeResource SystemAccentColorDark3}"/>
            </ProgressRing.Foreground>
        </ProgressRing>
        <TextBlock x:Name="labelPentalphaserver" HorizontalAlignment="Left" Margin="29,308,0,0" Text="Habilitación de Almacenamiento remoto en servidor de Pentalpha EIRL" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.92,-0.053" Height="32" Width="910" HorizontalTextAlignment="Left" FontWeight="Bold" />
        <TextBlock x:Name="labelSincronizarPropia" HorizontalAlignment="Left" Margin="29,446,0,0" Text="Sincronizar con Servidor Propio" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.92,-0.053" Height="23" Width="250" HorizontalTextAlignment="Right"/>
        <CheckBox x:Name="checkBoxSincronizacionPropio" Content="Requiere de evaluación, instalaión y configuración por parte de Pentalpha EIRL para el servidor. Se requiere tambien personalizar las configuraciones de las aplicaciones Windows de Clientes y App Android de Mensajeros." Margin="284,437,0,0" VerticalAlignment="Top" Width="655" Click="CambiarModoSincronizacion"/>
        <TextBlock x:Name="labelPentalphaserver_Copy" HorizontalAlignment="Left" Margin="29,405,0,0" Text="Habiltación de Almacenamiento remoto en servidor propio" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.92,-0.053" Height="32" Width="910" HorizontalTextAlignment="Left" FontWeight="Bold" />
        <TextBlock x:Name="labelSincronizarServidorPropio" HorizontalAlignment="Left" Margin="29,511,0,0" Text="Servidor HTTPS" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.92,-0.053" Height="23" Width="250" HorizontalTextAlignment="End" />
        <TextBox x:Name="textBoxServidor" HorizontalAlignment="Left" Margin="284,503,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="360" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" BorderThickness="1,1,1,1"/>
        <TextBlock x:Name="labelSincronizarServidorPropioPuerto" HorizontalAlignment="Left" Margin="649,511,0,0" Text="Puerto" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.92,-0.053" Height="23" Width="145" HorizontalTextAlignment="Left" />
        <TextBox x:Name="textBoxServidorPuerto" HorizontalAlignment="Left" Margin="799,503,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" BorderThickness="1,1,1,1"/>
        <CheckBox x:Name="checkBoxActivarSQLServer" Content="Con esta opción usted activa y configura los valores de conexión hacia una Base de Datos SQLServer" Margin="25,37,0,0" VerticalAlignment="Top" Width="932" Click="CambiarModoSincronizacion"/>
        <TextBlock x:Name="labelSQLServidorInstancia" HorizontalAlignment="Left" Margin="64,80,0,0" Text="Servidor/Instancia" TextWrapping="Wrap" VerticalAlignment="Top" Width="132" HorizontalTextAlignment="Right"/>
        <TextBlock x:Name="labelSQLPuerto" HorizontalAlignment="Left" Margin="491,69,0,0" Text="Puerto" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="1.707,0.368" HorizontalTextAlignment="Right" Width="121"/>
        <TextBlock x:Name="labelSQLUsuario" HorizontalAlignment="Left" Margin="64,111,0,0" Text="Usuario" TextWrapping="NoWrap" VerticalAlignment="Top" HorizontalTextAlignment="Right" Width="132"/>
        <TextBlock x:Name="labelSQLClave" HorizontalAlignment="Left" Margin="491,111,0,0" Text="Clave" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="2.424,0.684" HorizontalTextAlignment="Right" Width="121"/>
        <TextBlock x:Name="labelSQLBaseDeDatos" HorizontalAlignment="Left" Margin="64,145,0,0" Text="Base de Datos" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" HorizontalTextAlignment="Right"/>
        <TextBox x:Name="textBoxSQLServidorInstancia" HorizontalAlignment="Left" Margin="205,72,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="329"/>
        <TextBox x:Name="textBoxSQLPuerto" HorizontalAlignment="Left" Margin="622,61,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxSQLUsuario" HorizontalAlignment="Left" Margin="205,104,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
        <PasswordBox x:Name="passwordBoxSQLClave" HorizontalAlignment="Left" Margin="622,104,0,0" VerticalAlignment="Top" Width="201"/>
        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Margin="205,136,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
    </Grid>
</Page>
